.row
  .col-md-6
    %h1 Entities

    %table.table.table-striped
      %tr{ 'ng-repeat' => 'entity in entitiesCtrl.entities'}
        %td.col-md-11 {{ entity.name }}
        %td.col-md-1
          %button.btn.btn-default.btn-xs{ title: 'Click here to remove this entity.', 'ng-click' => 'entitiesCtrl.delete(entity.id)', 'confirmation-needed' => 'Are you sure you want to delete this entity?'}
            %span.glyphicon.glyphicon-remove{ 'aria-hidden' => 'true' }
      %tr
        %td
          %form{ 'ng-submit' => 'entitiesCtrl.add()' }
            .input-group
              %input.form-control{ type: 'text', 'ng-model' => 'entitiesCtrl.newEntityName' }
              .input-group-btn
                %button.btn.btn-default{ type: 'submit' }
                  %span.glyphicon.glyphicon-ok{ 'aria-hidden' => 'true' }
