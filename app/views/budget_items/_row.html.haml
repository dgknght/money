%tr{class: record.item ? '' : 'section_header', id: record.item ? "budget_item_#{record.item.id}" : '' }
  %td= record.header
  -record.columns.each do |column|
    %td.number_column= format_currency(column)
  %td.number_column= format_currency(record.total)
  %td.action_cell
    -if record.item
      =link_to 'Edit', edit_budget_item_path(record.item), class: 'edit_button', title: 'Click here to edit this budget item.'
      =render 'shared/delete_form', resource: record.item, url: budget_item_url(record.item)