%h2#page_title= @account.name

%table#transactions_table{cellspacing: 0, cellpadding:0}
  %tr
    %th Transaction Date
    %th Description
  -@transactions.each do |transaction|
    %tr
      %td= transaction.transaction_date
      %td= transaction.description

=form_for(@transaction, url: account_transactions_path(@account)) do |f|
  %div
    =f.label :transaction_date
    %br
    =f.text_field :transaction_date, class: 'date_field'
  %div
    =f.label :description
    %br
    =f.text_field :description
  .actions
    =f.submit 'Submit'