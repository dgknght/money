%h2#page_title Entities

%table#entities_table{cellspacing: 0, cellpadding:0}
  %tr
    %th Name
    %th
  -@entities.each do |entity|
    %tr{id: "entity_#{entity.id}" }
      %td= link_to entity.name, entity_path(entity)
      %td.action_cell
        =link_to "Edit", edit_entity_path(entity)
        =render "shared/delete_form", resource: entity, url: entity_url(entity)
.actions
  =link_to 'Add', new_entity_path