.form-group
  =f.label :trade_date
  =f.text_field :trade_date, class: 'date_field form-control', autofocus: true
.form-group
  =f.label :price
  =f.number_field :price, {min: 0.0001, step: 0.0001, class: 'form-control'}
.actions.btn-group
  =f.submit 'Save', class: 'btn btn-primary', title: 'Click here to save the price.'
  =link_to 'Back', commodity_prices_path(@commodity), class: 'btn btn-default', title: 'Click here to return to the list of prices.'
