%h2#page_title Attachments

%table#attachments_table.list{ cellpadding: 0, cellspacing: 0}
  %tr
    %th Name
    %th Content type
    %th.action_cell &nbsp;
  -@attachments.each do |attachment|
    %tr
      %td= attachment.name
      %td= attachment.content_type
      %td.action_cell
        =link_to 'View', attachment_content_path(attachment.attachment_content_id), class: 'show_button', title: 'Click here to view the attachment.'
        =render 'shared/delete_form', resource: attachment, url: attachment_url(attachment)
.actions
  =link_to 'Add', new_transaction_attachment_path(@transaction), class: 'add_button', title: 'Click here to add a new attachment.'
  =link_to 'Back', entity_transactions_path(@transaction.entity), class: 'back_button', title: 'Click here to return to the list of transactions.'
